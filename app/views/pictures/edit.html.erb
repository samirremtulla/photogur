<!-- edit.html.erb -->

<h1>Edit a Picture</h1>


<form action="/pictures/<%= @picture.id %>" method="POST"><!--  sending something to the url therefore using POST -->

<p>
	<label>Artist</label><br>
	<input type="text" name="artist" value="<%= @picture.artist %>"/>
</p>

<p>
	<label>Title</label><br>
	<input type="text" name="title" value="<%= @picture.title %>"/>
</p>

<p>
	<label>URL</label><br>
	<input type="text" name="url" value="<%= @picture.url %>"/>
</p>

<p>
	<input type="submit"/>
</p>

</form>