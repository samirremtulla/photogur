<!-- new.html.erb -->
<h1> Add a picture! </h1>

<!-- FIRST VERSION HTML: <form action="/pictures" method="POST"> --><!--  sending something to the url therefore using POST -->

<%= form_for @picture do |f| %>

<p>
	<label>Artist</label><br>
  <%= f.text_field "artist"%>
</p>

<p>
	<label>Title</label><br>
  <%= f.text_field "title" %>
</p>

<p>
	<label>URL</label><br>
  <%= f.text_field "url" %>
</p>

<p>
  <%= f.submit "Save"%>
</p>

<%end%>